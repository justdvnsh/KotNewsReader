<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:id="@+id/searchLayout"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:id="@+id/backButton"
                android:scaleX="1.2"
                android:scaleY="1.2"
                android:padding="10dp"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/AudioPlayerTitle"
                android:padding="6dp"
                android:textColor="#000000"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/paginationProgressBar"
        style="?attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5"
        />

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        app:layout_constraintStart_toStartOf="parent"
        >

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            >
            <TableLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:columnCount="2"
                android:padding="20dp"
                android:id="@+id/gridLayout"
                >

                <TableRow>
                <androidx.cardview.widget.CardView
                    android:layout_height="200dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/business"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp">

                    <FrameLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_business_4271251"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:padding="10dp"
                            android:text="@string/business"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_height="200dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/entertainment"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    >
                    <FrameLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_film_162029"
                            />

                        <TextView
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:text="@string/entertainment"
                            android:textSize="16sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            />

                    </FrameLayout>
                </androidx.cardview.widget.CardView>
                </TableRow>

                <TableRow>
                <androidx.cardview.widget.CardView
                    android:layout_height="200dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/technology"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    >
                    <FrameLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_laptop_2298286"
                            />

                        <TextView
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:text="@string/tech"
                            android:textSize="16sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            />

                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_height="200dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/sports"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    >
                    <FrameLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_golf_23794"
                            />

                        <TextView
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:text="@string/sports"
                            android:textSize="16sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            />

                    </FrameLayout>
                </androidx.cardview.widget.CardView>
                </TableRow>

                <TableRow>
                <androidx.cardview.widget.CardView
                    android:layout_height="200dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/health"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    >
                    <FrameLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_sports_1050966"
                            />

                        <TextView
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:text="@string/health"
                            android:textSize="16sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            />

                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_height="200dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/science"
                    android:layout_weight="1"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    >
                    <FrameLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <ImageView
                            android:scaleType="centerInside"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_brain_2750415"
                            />

                        <TextView
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="bottom|center"
                            android:text="@string/science"
                            android:textSize="16sp"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            />

                    </FrameLayout>
                </androidx.cardview.widget.CardView>
                </TableRow>

            </TableLayout>

            <androidx.cardview.widget.CardView
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:id="@+id/favorites"
                android:layout_below="@id/gridLayout"
                android:layout_marginBottom="80dp"
                android:padding="20dp"
                >
                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageView
                        android:scaleType="centerInside"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_bookmark_1294473"
                        />

                    <TextView
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="bottom|center"
                        android:text="@string/favorites"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        />

                </FrameLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>